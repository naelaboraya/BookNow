<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BookNow"
        tools:targetApi="31"
        android:enableOnBackInvokedCallback="true">

        <activity
            android:name=".BusinessEmailVerificationActivity"
            android:parentActivityName=".BusinessRegistrationActivity"
            />

        <activity
            android:name=".BusinessDashboardActivity"
            />

        <activity
            android:name=".BusinessRegistrationActivity"
            android:parentActivityName=".BusinessActivity"/>



        <activity
            android:name=".CustomerDashboardActivity"

            />

        <activity
            android:name=".CustomerOtpVerificationActivity"
            android:parentActivityName=".CustomerActivity"
            />

        <activity
            android:name=".BusinessActivity"
            android:exported="false"
            android:label="@string/title_activity_business"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".CustomerActivity"
            android:exported="false"
            android:label="@string/title_activity_customer"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>