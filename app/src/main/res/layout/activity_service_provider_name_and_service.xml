<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/back_icon_selector"
        tools:ignore="MissingConstraints" />

    <!-- Provider Name Label -->
    <TextView
        android:id="@+id/providerNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provider Name"
        android:textSize="30dp"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/muli_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Provider Name EditText -->
    <EditText
        android:id="@+id/providerNameEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Provider Name"
        android:fontFamily="@font/muli_black"
        app:layout_constraintTop_toBottomOf="@+id/providerNameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!-- Select Services TextView -->
    <TextView
        android:id="@+id/selectServicesTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Select Services"
        android:gravity="center"
        android:fontFamily="@font/muli_black"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="18sp"
        app:drawableEndCompat="@drawable/arrow_drop_down_24"
        app:layout_constraintTop_toBottomOf="@+id/providerNameEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@+id/selectServicesTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/black"
        android:textColor="@color/white"
        app:backgroundTint="@null"/>

</androidx.constraintlayout.widget.ConstraintLayout>


